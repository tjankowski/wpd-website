<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><label for="login"><%= t('user.login') %></label><br/>
<%= f.text_field :login %></p>

<p><label for="email"><%= t('user.email') %></label><br/>
<%= f.text_field :email %></p>

<p><label for="password"><%= t('user.password') %></label><br/>
<%= f.password_field :password %></p>

<p><label for="password_confirmation"><%= t('user.confirm_password') %></label><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag t('user.sign_up') %></p>
<% end -%>
