<h1>New photo</h1>

<% form_for @photo, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= form.label :image, "Photo" %>
    <%= form.file_field :image %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', photos_path %>