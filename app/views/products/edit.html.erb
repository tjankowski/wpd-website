<%= render :partial => 'partials/editor' %>

<% @menu_title = t('product.all_products') %>

<% content_for :menu_options do %>
  <ul>
    <li class="store_menu_link">
      <% link_to :controller => 'product_category', :action => 'index', :id => @product do %>
        <%= image_tag 'tag.png', :size => '15x15', :align => :top %>
        <%= t('product.add_to_category') %>
      <% end %>
    </li>
    <li class="store_menu_link">
      <% link_to @product do %>
        <%= image_tag 'zoom.png', :size => '15x15', :align => :top %>
        <%= t('show') %>
      <% end %>
    </li>
    <li class="store_menu_link">
      <% link_to new_product_url do %>
        <%= image_tag 'document_add.png', :size => '15x15', :align => :top %>
        <%= t('product.new_product') %>
      <% end %>
    </li>
    <li class="store_menu_link">
      <% link_to products_path do %>
        <%= image_tag 'back.png', :size => '15x15', :align => :top %>
        <%= t('back') %>
      <% end %>
    </li>
  </ul>
<% end %>

<div class="content">
  <h1>
    <%= t('product.edit_product') %>
  </h1>

  <% form_for @product, :html => { :multipart => true } do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name, t('product.name') %>:
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description, t('product.description') %>:<br />
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :description_short, t('product.description_short') %>:<br />
      <%= f.text_area :description_short %>
    </p>
    <h3>
      <%= t('photo.all_photos') %>
    </h3>
    <div id="photos">
      <%= render :partial => 'new_photo', :collection => @product.photos %>
    </div>
    <%= add_photo_link t('product.add_photo') %>
    <p class="text_align_center">
      <%= f.submit t('update') %>
    </p>
  <% end %>
  <div class="help">
    <%= image_tag 'help.png', :size => '15x15', :align => 'top' %>
    W przypadku braku edytora, proszę odświeżyć stronę.
  </div>

</div>